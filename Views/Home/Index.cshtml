@{
    ViewData["Title"] = "Home Page";
}

@section Styles
{
    <link href='/lib/fullcalendar/main.css' rel='stylesheet' />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">

}

<div id="calendar">

</div>




@section Scripts{
    <script src='/lib/fullcalendar/main.js'></script>
    <script src="~/lib/fullcalendar/locales/tr.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var calendarEl = document.getElementById('calendar');
            var calendar = new FullCalendar.Calendar(calendarEl, {
                initialView: 'dayGridMonth',
                themeSystem: 'bootstrap',
                bootstrapFontAwesome: {
                    prev: 'fa-chevron-circle-left',
                    next: 'fa-chevron-circle-right',
                    listWeek: 'fa-list'
                    
                },


                slotDuration: '00:15:00',
                //slotLabelInterval: '-',
                slotLabelFormat: {
                    hour: '2-digit',
                    minute: '2-digit',
                    meridiem: 'short'
                },
                handleWindowResize: true,
                windowResizeDelay: 100,
                fixedWeekCount: true,
                showNonCurrentDates: false,
                locale:'tr',
                headerToolbar: {
                    left: 'prev next today',
                    center: 'title',
                    right: 'dayGridMonth timeGridWeek timeGridDay timeGridForFourDay listWeek'
                    //listday, listweek, listmonth,listyear
                },
               
                defaultView: 'dayGridMonth',
                weekends: false,
                allDaySlot: false,
                titleFormat: {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric',
                    
                },
                titleRangeSeparator: ' / ',
                dayHeaderFormat: {
                    weekday: 'long'
                },
                businessHours: {
                    // days of week. an array of zero-based day of week integers (0=Sunday)

                    startTime: '10:00', // a start time (10am in this example)
                    endTime: '19:16:00', // an end time (6pm in this example)
                },
                slotMinTime: '10:00:00',
                slotMaxTime: '18:30:00',

                views: {
                    timeGridForFourDay: {
                        type: 'timeGrid',
                        //dayCount: 4,
                        duration: {days: 4},
                        buttonText : '4 Gün'
                    }
                },
                buttonText: {
                    today: 'Bugün'
                },


                customButtons: {
                    getDate: {
                        text: 'date',
                        click: function () {
                            var date = new date();
                            alert(date);
                        }
                    }
                },
                //eventColor: 'red',
                eventBackgroundColor: 'green',
                eventBorderColor: 'black',
                //eventTextColor : 'pink',
                eventTimeFormat: {
                    hour: '2-digit',
                    minute: '2-digit'
                },
                timeZone : 'UTC',
                events: [
                    {
                        id: 'x',
                        title: 'Merhaba',
                        start: '2020-09-18T11:00:00.000Z',
                        end: '2020-09-18T12:30:00.000Z'
                    },
                    {
                        id: 'y',
                        title: 'Merhaba Y ',
                        start: '2020-09-18T10:00:00.000Z',
                        end: '2020-09-18T10:30:00.000Z'
                    }
                ],
                selectable: true,
                select: function (selectionInfo) {
                    // istediğim kodlar
                    console.log(selectionInfo);
                },
                /// tıklayınca yada üzerine gelince alert.
                //eventClick: function (info) {
                //    alert(info.event.title);
                //},
                //eventMouseEnter: function (onMouse) {
                //    alert(onMouse.event.start);
                //}
                ///// editleme ayarları
                editable: true,
                //eventStartEditable: false,
                eventDurationEditable: true,
                snapDuration: '00:15:00',
                eventOverlap: function (stillEvent, movingEvent) {
                    ///// çakışma durumları için(üst üste event gelirse gg)!
                    return stillEvent.allDay && movingEvent.allDay;
                },

                eventDragStart: function (info) {
                    console.log('başladı.');
                },
                eventDragStop: function (info) {
                    console.log('bitti.');
                },
                eventDrop: function (eventDropInfo) {
                    console.log('droped.'); 
                },

                eventResizeStart: function (info) {
                    console.log('Resize başladı.');
                },
                eventResizeStop: function (info) {
                    console.log('Resize bitti');
                },
                eventResize: function (eventResizeInfo){
                    console.log('Resize edildi');
                    //
                    //eventResizeInfo.revert(); // eski hale getirmek için
                }


                
            });
            calendar.render();
            var events = calendar.getEvents();
            console.log(events);

            var id = 'x';
            var event = calendar.getEventById(id);
            console.log(event);


        });
    </script>
    
    

}